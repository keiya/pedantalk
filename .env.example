# OpenAI API key
OPENAI_API_KEY=your_openai_api_key_here

# Conversation settings
MODEL_NAME=gpt-4-turbo

# Voice settings
# Available voices: alloy, ash, ballad, coral, echo, fable, onyx, sage, shimmer
HOST_VOICE=echo
# Optional voice instruction for the host (e.g., "Speak with a calm, warm tone")
HOST_VOICE_INSTRUCTION=
# If not set, a random voice different from the host will be selected
GUEST_VOICE=

# Audio settings
SILENCE_MIN_MS=500
SILENCE_MAX_MS=1500 
